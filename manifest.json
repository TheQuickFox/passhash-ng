{

  "manifest_version": 2,
  "name": "Password Hasher NG",
  "version": "0.1",

  "applications": {
    "gecko": {
      "id": "passhash-ng@cnielsen.de"
    }
  },

  "description": "Implementation of the Password Hasher extension for the new Webextension API",

  "permissions": [
    "activeTab",
    "notifications",
    "storage"
  ],

  "icons": {
    "48": "icons/logo.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
      "page": "options.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery-3.2.1.min.js", "content.js"]
    }
  ]

}
